@model u21632660_HW03.Models.LibraryVM
@{
    ViewBag.Title = "BorrowEditor";
    var books = Model.BooksList;
    var students = Model.StudentsList;
    var borrow = Model.BorrowsList[0];
}

<div class="card">
    @using (Html.BeginForm("EditBorrow", "Library", FormMethod.Post))
    {
        <div class="card-body">
            <h5>Borrow details</h5>
            <input hidden type="number" name="borrowId" value="@borrow.borrowId"/>
            <div class="form-group">
                <label for="">Student</label>
                <select class="form-control form-control-sm" name="student">
                    @foreach (var student in students.Where(stu => stu.studentId == borrow.studentId))
                    {
                        <option value="@student.studentId">@student.name @student.surname</option>
                    }
                    @foreach (var student in students.Where(stu => stu.studentId != borrow.studentId))
                    {
                        <option value="@student.studentId">@student.name @student.surname</option>
                    }
                </select>
            </div>
            <div class="form-group"> 
                <label for="">Book</label>
                <select class="form-control form-control-sm" name="book">
                    @foreach (var book in books.Where(b => b.bookId == borrow.bookId))
                    {
                        <option value="@book.bookId">@book.name</option>
                    }
                    @foreach (var book in books.Where(b => b.bookId != borrow.bookId))
                    {
                        <option value="@book.bookId">@book.name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="">Return Date</label>              
                <input type="date" min="" name="dateIn" class="form-control form-control-sm" value="@borrow.broughtDate"  required/>
            </div>
        </div>
        <div class="card-footer">
            <button type="button" class="btn btn-sm btn-danger" onclick="" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-sm btn-success">Edit</button>
        </div>
    }
</div>

