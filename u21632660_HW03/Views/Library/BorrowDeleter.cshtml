@model u21632660_HW03.Models.LibraryVM
@{
    ViewBag.Title = "BorrowDeleter";
    var borrow = Model.BorrowsList[0];
    var mybook = Model.BooksList.Where(book => book.bookId == borrow.bookId).FirstOrDefault();
}

<h5>Delete Borrow</h5>

<div class="card">
    
    <div class="card-body">
        <p>You are about to delete borrow for: <b>@mybook.name</b></p>
        <button class="btn btn-sm btn-danger" data-dismiss="modal">Cancel</button>
        <button type="button" onclick="@("window.location.href='" + @Url.Action("DelBorrow", "Library", new { borrowId=borrow.borrowId}) + "'")" class="btn btn-sm btn-success">Delete</button>
    </div>
</div>

