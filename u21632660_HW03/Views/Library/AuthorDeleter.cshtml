@model u21632660_HW03.Models.LibraryVM
@{
    ViewBag.Title = "AuthorDeleter";
    var author = Model.AuthorsList[0];
}

<h4>Delete Author</h4>

<div class="card">
    <div class="card-body">
        <p>You are about to delete book type: <b>@author.name @author.surname</b></p>
        <button class="btn btn-sm btn-danger" data-dismiss="modal">Cancel</button>
        <button type="button" onclick="@("window.location.href='" + @Url.Action("DelAuthor", "Library", new { authorId=author.authorId}) + "'")" class="btn btn-sm btn-success">Delete</button>
    </div>
</div>
