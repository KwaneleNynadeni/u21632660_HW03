@model u21632660_HW03.Models.LibraryVM
@{
    ViewBag.Title = "TypeDeleter";
    var type = Model.BookTypesList[0];
}

<h5>Delete Type</h5>

<div class="card">
    
    <div class="card-body">
        <p>You are about to delete book type: <b>@type.name</b></p>
        <button class="btn btn-sm btn-danger" data-dismiss="modal">Cancel</button>
        <button type="button" onclick="@("window.location.href='" + @Url.Action("DelType", "Library", new { typeId=type.typeId}) + "'")" class="btn btn-sm btn-success">Delete</button>
    </div>
</div>
